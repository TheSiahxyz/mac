### --- Paste --- ###
# init
pasteinit() {
    OLD_SELF_INSERT=${${(s.:.)widgets[self-insert]}[2,3]}
    zle -N self-insert url-quote-magic
}


###########################################################################################
###########################################################################################
### --- Last Command Output --- ###
insert-last-command-output() {
    LBUFFER+="$(eval $history[$((HISTCMD-1))])"
}
